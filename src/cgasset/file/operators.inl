#pragma once

#include <cstring>

#include "File.h"


////////////////////////////////////////////////////////////////////////////////
File& File::operator = (const File& file)
{
	if(size != file.size)
	{
		size = file.size;
		delete[] data;
		data = new char[size];
	}
	memcpy(data,file.data,size);
	return *this;
}
////////////////////////////////////////////////////////////////////////////////
File::operator bool() const
{ return (data != nullptr); }
