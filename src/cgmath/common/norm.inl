#include <cmath>

#include "dot.inl"

////////////////////////////////////////////////////////////////////////////////
template<typename T>
inline auto norm2(const T& v) -> decltype(dot(v,v)) { return dot(v,v); }
////////////////////////////////////////////////////////////////////////////////
template<typename T>
inline auto norm(const T& v) -> decltype(dot(v,v)) { return sqrt(dot(v,v)); }
////////////////////////////////////////////////////////////////////////////////
template<typename T>
inline auto length2(const T& v) -> decltype(dot(v,v)) { return dot(v,v); }
////////////////////////////////////////////////////////////////////////////////
template<typename T>
inline auto length(const T& v) -> decltype(dot(v,v)) { return sqrt(dot(v,v)); }
